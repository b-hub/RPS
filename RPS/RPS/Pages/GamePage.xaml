<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPS.Pages.GamePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
			<Label Text="Game" HorizontalOptions="Center"></Label>
            <Label Text="{Binding GameId}" VerticalOptions="Center" HorizontalOptions="Center" />
			
			<Label Text="{Binding Status}" Margin="20" HorizontalOptions="Center"></Label>
			
			<Button Text="Rock"></Button>
			<Button Text="Paper"></Button>
			<Button Text="Scissors"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>