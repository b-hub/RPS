<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RPS"
             xmlns:constants="clr-namespace:RPS.Constants;assembly=RPS.Android"
             x:Class="RPS.MainPage">

    <StackLayout VerticalOptions="Center">
		<Label Text="Welcome to RPS" HorizontalOptions="Center"></Label>
		<Label Text="{Binding GameStatus}" HorizontalOptions="Center"></Label>

		<Button Text="Find game" Command="{Binding CmdFindGame}" Margin="0, 20, 0, 0"></Button>
	</StackLayout>

</ContentPage>
